<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hello_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello $user!"
        android:textColor="@color/colorLight"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/robot3" />

    <Button
        android:id="@+id/button_devices"
        style="@style/ClassicButton"
        android:background="@drawable/rounded_button"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:drawableLeft="@drawable/small_device"
        android:text="Devices"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/button_sensors"
        style="@style/ClassicButton"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/small_sensor"
        android:text="Sensors"
        app:layout_constraintEnd_toEndOf="@+id/button_devices"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_devices"
        app:layout_constraintTop_toBottomOf="@+id/button_devices" />

    <Button
        android:id="@+id/button_statistics"
        style="@style/ClassicButton"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/small_statistics"
        android:text="@string/statistics"
        app:layout_constraintEnd_toEndOf="@+id/button_sensors"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_sensors"
        app:layout_constraintTop_toBottomOf="@+id/button_sensors" />

    <Button
        android:id="@+id/button_settings"
        style="@style/ClassicButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/small_settings"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="@+id/button_statistics"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_statistics"
        app:layout_constraintTop_toBottomOf="@+id/button_statistics" />

    <Button
        android:id="@+id/button_logout"
        style="@style/ClassicButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/small_exit"
        android:text="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_statistics"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_statistics" />

</androidx.constraintlayout.widget.ConstraintLayout>